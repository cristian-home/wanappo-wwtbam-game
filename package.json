{
  "name": "wanappo-wwtbam-game",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "nightwatch tests/e2e/*",
    "build-only": "vite build",
    "type-check": "run-p type-check:*",
    "type-check:app": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "type-check:node": "vue-tsc --noEmit -p tsconfig.node.json --composite false",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "pinia": "^3.0.2",
    "tailwindcss": "^4.1.6",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.3",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nightwatch/vue": "^3.1.2",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.18",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/eslint-plugin": "^1.1.44",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chromedriver": "^136.0.2",
    "eslint": "^9.26.0",
    "eslint-plugin-oxlint": "^0.16.10",
    "eslint-plugin-vue": "~10.1.0",
    "geckodriver": "^5.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "nightwatch": "^3.12.1",
    "npm-run-all2": "^8.0.1",
    "oxlint": "^0.16.10",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-nightwatch": "^0.4.6",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10"
  }
}
